#!/usr/bin/env python

# This script is automatically configured with cmake when WASIM
# is built with --python. It is called during make install
# to automatically install the python bindings using setuptools
# It assumes that pip is available

from setuptools import setup

setup(name='wasim',
      long_description="Python bindings for the symbolic simulator WASIM",
      version='${WASIM_MAJOR}.${WASIM_MINOR}.${WASIM_RELEASE}',
      url='https://github.com/fangwenji/wasim-cpp',
      license='BSD',
      install_requires=['smt-switch'],
      test_requires=['pytest'],
      package_data={'': ['wasim.so']},
      zip_safe=False)
